<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityConsultar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollvertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <HorizontalScrollView
            android:id="@+id/scrollhorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0"
                    android:gravity="top|left"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:stretchColumns="3">

                    <TableRow
                        android:id="@+id/tituloTabla"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left">

                        <TextView
                            android:id="@+id/columnarLugar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"
                            android:text="Lugar"
                            android:textColor="#fa1a1a"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/columnarNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"
                            android:text="Nombre"
                            android:textColor="#fa1a1a"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/columnarClave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"
                            android:text="Clave"
                            android:textColor="#fa1a1a"
                            android:textSize="25dp" />

                    </TableRow>

                </TableLayout>

                <TextView
                    android:id="@+id/tableTextTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0"
                    android:gravity="bottom|center"
                    android:text="TextView text"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tableTextContenido"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0"
                    android:gravity="top|center"
                    android:text="TextView text"
                    android:textSize="15dp" />

            </LinearLayout>

        </HorizontalScrollView>

    </ScrollView>

</LinearLayout>